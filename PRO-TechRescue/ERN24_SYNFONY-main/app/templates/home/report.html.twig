{% extends 'base.html.twig' %}

{% block title %}Rapports des Techniciens{% endblock %}

{% block body %}
<div class=" min-vh-10">
		{{ include('home/partials/header.html.twig') }}

    <main class="container mt-4">
        <h2 class="mb-4">Rapports des Techniciens</h2>

        <div class="card mt-4">
            <div class="card-body">
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Rechercher un rapport...">
                </div>

                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Technicien</th>
                                <th>Client</th>
                                <th>Date</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ticket in tickets %}
                                <tr>
                                    <th scope="row">{{ ticket.id }}</td>
                                    <td>John Doe</td>
                                    <td>Entreprise ABC</td>
                                    <td>{{ "now"|date("d/m/Y") }}</td>
                                    <td><span class="badge bg-success">{{ ticket.status }}</span></td>
                                    <td>
                                        <a href="#" class="btn btn-sm btn-primary">Voir</a>
                                    </td>
                                </tr>
                                {% else %}
                            <tr>
                                <td colspan="4" class="text-center">Aucun historique en cours</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                {# <div class="d-flex justify-content-between align-items-center mt-3">
                    <span class="text-muted">Affichage de 1 à 10 sur 50 rapports</span>
                    <div>
                        <a href="#" class="btn btn-outline-primary">Précédent</a>
                        <a href="#" class="btn btn-outline-primary">Suivant</a>
                    </div>
                </div> #}

                <a href="{{ path('app_home') }}" class="btn btn-secondary mt-3">Retour</a>
            </div>
        </div>
    </main>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}