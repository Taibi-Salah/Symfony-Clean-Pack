{# templates/piece/_form.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}  
{% include('home/partials/header.html.twig') %}
<body>
<div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h1>Modifier une pièce</h1>
            </div>
            <div class="card-body">
                <form method="post" action="#">
                    <div class="mb-3">
                        <label for="name" value="ok"  class="form-label">Nom</label>
                        <input type="text" class="form-control" id="name" name="name" required  >
                    </div>
                    <div class="mb-3">
                        <label for="reference" class="form-label">Référence</label>
                        <input type="text" placeholder="{{piece.referenceNB}}"class="form-control" id="reference" name="reference" required>
                    </div>
                    <div class="mb-3">
                        <label for="quantity" class="form-label">Quantité</label>
                        <input type="number" placeholder="{{piece.quantity}}" class="form-control" id="quantity" name="quantity" required>
                    </div>
                    <button type="submit" class="btn btn-success mb-3">Modifier</button>
                    <a href="{{ path('admin_catalogue')}}" class="btn btn-danger mb-3">Annulez</a>
                </form>
            </div>
        </div>
    </div>
</body>
{% endblock %}

