{% extends 'base.html.twig' %}

{% block body %}  
{% include('home/partials/header.html.twig') %}
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Catalogue de pièces</h1>
            </div>
            <div class="card-body">
                
                <a href="{{ path('admin_dashboard')}}" class="btn btn-success mb-3">Retour</a>
                <a href="{{ path('app_addpiece')}}" class="btn btn-primary mb-3">Ajouter une pièce</a>
                <a href="{{ path('admin_history')}}" class="btn btn-primary mb-3">Entrée/Sortie Pièces</a>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Nom</th>
                            <th scope="col">Description</th>
                            <th scope="col">Numéro de référence</th>
                            <th scope="col">Quantité</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {# {% for part in parts %} #}
                            <tr>
                                <td> part.name </td>
                                <td> part.description </td>
                                <td> part.referenceNumber </td>
                                <td> part.quantity </td>
                                <td>
                                <a href="{{ path('app_editpiece') }}" class="btn btn-warning btn-sm">Modifier</a>
                                    <form method="post" action="#" style="display:inline-block;">
                                        <input type="hidden" name="_token" value="#">
                                        <button class="btn btn-danger btn-sm" onclick="return confirm('Voulez-vous vraiment supprimer cette pièce ?')">Supprimer</button>
                                        <a href="">
                                    </form>
                                </td>
                            </tr>
                        {# {% else %} #}
                            <tr>
                                <td colspan="5" class="text-center">Aucune pièce disponible</td>
                            </tr>
                        {# {% endfor %} #}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>



{% endblock %}
